{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
//    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", 移除 "tsBuildInfoFile"
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
//    "noFallthroughCasesInSwitch": true,  移除 "noUncheckedSideEffectImports"
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
